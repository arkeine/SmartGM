<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.activity.DescriptionDisplayActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        tools:layout="@layout/fragment_wiki_content"
        android:name="ch.arkeine.smartgm.view.fragment.WikiContent"
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/fragment" />

    <fragment
        android:name="ch.arkeine.smartgm.view.fragment.DataEditionButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_data_edition_buttons"
        android:id="@+id/fragment"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>